<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Exibição</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/index.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mynerve&display=swap" rel="stylesheet">
    </head>

<body>
    
    <div class="container mt-5">
        <h2 class="mb-4">Registros</h2>

        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <td>Nome</td>
                    <td>Sobrenome</td>
                    <td>Ação</td>
                </tr>
            </thead>
            <tbody>
                <% crud.forEach(function(details) { %>
                    <tr>
                        <td>
                            <%= details.name %>
                        </td>
                        <td>
                            <%= details.surname %>
                        </td>
                        <td>
                            <a href="/edit/<%= details._id %>" class="btn btn-warning btn-sm" style="background-color: blueviolet; color: white;">Editar</a>
                            <a href="/delete/<%= details._id %>" class="btn btn-danger btn-sm">Deletar</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        
        <a href="/index" class="btn btn-primary mt-3">Adicionar Novo Registro</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>

</html>
